 function searchMission(pg, who) {
    debugger
    var search = $('input[name="search"]').val();
    if (search == "") {
        search = $('input[name="searchMission"]').val();
    }
    if (search == "") {
        search = $('input[name="searchTheme"]').val();
    }
    if (search == "") {
        search = $('input[name="searchCms"]').val();
    }
    if (search == "") {
        search = $('input[name="searchStory"]').val();
    }
    if (search == "") {
        search = $('input[name="searchApplication"]').val();
    }
    if (search == "") {
        search = $('input[name="searchSkill"]').val();
    }

    if (pg == undefined) {
        pg = 1;
    }

    if (who == undefined) {
        who = 'user';
    };
   
    $.ajax({
        url: "/Admin/Search",
        method: "POST",
        data: {
            "search": search,
            "pg": pg,
            "who": who
        },
        success: function (data) {
            if (who == 'user') {
                $('#users').html(data);
            }
            else if (who == 'mission') {
                $('#missions').html(data);
            }
            else if (who == 'theme') {
                $('#themes').html(data);
            }
            else if (who == 'cmsPages') {
                $('#cms').html(data);
            }
            else if (who == 'story') {
                $('#stories').html(data);
            }
            else if (who == 'application') {
                $('#applications').html(data);
            }
            else if (who == 'skill') {
                $('#skills').html(data);
            }
           
        },
        error: function (request, error) {
            console.log(error);
        }
    })

}
     function ApproveAdminData(id, who) {
      debugger
    $.ajax({
        url: '/Admin/approveAdminData',
        type: 'post',
        data: {
            Id: id,
            who: who
        },
        success: function (result) {
            console.log(result)
            if (who == 'DeclineApp') {
                if (result == true) {
                    toastr.success('User Application Declined');
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    toastr.error('User Application Not Declined!!!');
                }
            }
            if (who == 'ApproveApp') {
                if (result == true) {
                    toastr.success('User Application Approved');
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    toastr.error('User Application Not Approved!!!');
                }
            }
            if (who == 'ApproveStory') {
                if (result == true) {
                    toastr.success('User Story Approved');
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    toastr.error('User story Not Approved!!!');
                }
            }
            if (who == 'DeclineStory') {
                if (result == true) {
                    toastr.success('User Story Declined');
                    setTimeout(function () {
                        location.reload();
                    }, 500);
                } else {
                    toastr.error('User story Not declined!!!');
                }
            }

        },
        error: function () {
            console.log("Error updating variable");
        }
    })
}
