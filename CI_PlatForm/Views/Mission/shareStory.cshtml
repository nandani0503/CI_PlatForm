@{
    @Html.Partial("_TopNav")
        <div class="container">
            <h1>Share Your Story</h1>
        </div>
       <div class="container">
          <div class="row">
            <div class="col-4">
                <label for="dropdownMenuButton1">Select Mission</label>
                   <div class="dropdown py-1">
                      <button class="btn dropdown-toggle border" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Your Mission
                      </button>
                      <ul class="dropdown-menu">
                      @foreach(var obj in @ViewBag.missionStory)
                      {
                        <li><a class="dropdown-item" href="#">@obj.Title</a></li>
                      }
                    
                      </ul>
                    </div>
               </div>
                <div class="col-4">
                <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">My Story Title</label>
                <input type="email" class="form-control" id="exampleFormControlInput1">
               </div>
               </div>
           <div class="col-4">
           </div>
            </div>
          
       </div>
    
      <div class="container">
        <div class="form-group">
           <label for="exampleFormControlTextarea1">My Story</label>
             <div class="p-1 border">
                <div class="d-flex">
                    <i class="bi bi-type-bold p-1" id="bold"></i>
                    <i class="bi bi-type-italic p-1"></i>
                    <div class="vr"></div>
                    <i class="bi bi-subscript p-1"></i>
                    <i class="bi bi-superscript p-1"></i>
                </div>
            </div>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Sample Editor 1"></textarea>
         </div>
       </div>
       <script>
      
                                    $(document).ready(function(){
                                        $('#bold').toggle(
                                            function(){$('#exampleFormControlTextarea1').css({"font-weight":"strong"});},
                                            function(){$('#exampleFormControlTextarea1').css({"font-weight":"normal"});
                                            });
                                        
                                    })

                                   </script>
       <div class="container">
       <div class="row">
          <div class="mb-3 py-3">
          <label for="exampleFormControlInput1" class="form-label">Enter Video URL</label>
          <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Enter your url">
        </div>
        </div>
       </div>
       <div class="container">
       <label for="dragDrop">Upload Your Photos</label>
       <div class="border text-center p-3">
       <img src="/Images/CI Platform Assets/drag-and-drop.png">
       </div>
       </div>
       <div class="container">
       <div class="row">
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/img1.png" class="h-100 w-100">
       </div>
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/Grow-Trees-On-the-path-to-environment-sustainability-4.png" class="h-100 w-100">
       </div>
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/img33.png" class="h-100 w-100">
       </div>
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/img33.png" class="h-100 w-100">
       </div>
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/img.png" class="h-100 w-100">
       </div>
       <div class="col-1 my-5">
       <img src="/Images/CI Platform Assets/img.png" class="h-100 w-100">
       </div>
       
       </div>
       </div>
       <div class="container">
       <div class="row">
       <div class="col-3">
       <button type="button" class="btn btn-outline-secondary border rounded-pill">Cancel</button>
       </div>
       <div class="col-9 justify-content-end d-flex">
       <button type="button" class="btn btn-outline-warning border rounded-pill">Save</button>
       <button type="button" class="btn btn-outline-warning border rounded-pill">Submit</button>
       </div>
       </div>
       </div>
       <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                                                        <ul class="col-lg-6 col-md-6 list-unstyled d-flex nav">
                                                            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Privacy Policy</a></li>
                                                            </ul>
                                                   </footer>
                                                   </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                                    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                                    crossorigin="anonymous"></script>
}
