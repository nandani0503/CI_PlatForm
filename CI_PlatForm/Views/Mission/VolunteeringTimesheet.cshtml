@{
@model CI_PlatForm.Entities.Models.Timesheet
     @Html.Partial("_TopNav")
     <div class="container">
      <div class="row">
       <h1>Volunteering Timesheet</h1>
      </div>
     </div>
     <div class="container">
      <div class="row">
       <div class="col-lg-6 col-md-6 col-12">
        <div class="row">
         <div class="col-lg-6 col-md-6 col-12">
          <h3>Volunteering Hours</h3>
         </div>
         <div class="col-lg-6 col-md-6 col-12 text-end">
          <button type="button" class="btn btn-outline-warning border rounded-pill" data-bs-toggle="modal" data-bs-target="#VolunteerHours"><i class="bi bi-plus"></i>&nbsp; Add</button>
          

            <!-- Modal -->
            <div class="modal fade" id="VolunteerHours" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Please input below Volunteering Hours</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form method="post" id="form">
                    <div class="row py-3">
                      
                        <label for="Mission" class="text-start">Mission</label>
                        <input type="text" asp-for="@Model.Notes" class="form-control" id="Mission" aria-describedby="emailHelp" placeholder="Enter Mission">
                      
                      </div>
                      <div class="row py-3">
                      
                      <label for="datepicker1" class="text-start">Date Volunteered</label>
                      <input type="text" id="datepicker1" asp-for="@Model.DateVolunteered" placeholder="Select Date">
                      </div>
                      <div class="row py-3">
                      <div class="col-lg-6 col-md-6 col-12 text-start" >
                      <label for="Hours" >Hours</label>
                        <input type="text" class="form-control" id="Hours" aria-describedby="emailHelp" placeholder="Enter spent hours">
                        </div>
                        <div class="col-lg-6 col-md-6 col-12 text-start">
                         <label for="Minutes" >Minutes</label>
                        <input type="text" class="form-control" id="Minutes" aria-describedby="emailHelp" placeholder="Enter spent minutes">
                        </div>
                        </div>
                        <div class="row py-3">
                        <div class="col-12 text-start">
                         <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" aria-describedby="emailHelp" placeholder="Enter your message"></textarea>
                        </div>
                        </div>
                      </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary border rounded-pill" data-bs-dismiss="modal">Cancle</button>
                    <button type="submit" class="btn btn-outline-warning border rounded-pill" asp-action="VolunteeringTimesheet" asp-controller="Mission">Submit</button>
                  </div>
                </div>
              </div>
               

               
            </div>
         </div>
         <div class="container p-3">
          <table class="w-100">
           <tr>
            <th>Mission</th>
            <th>Date</th>
            <th>Hours</th>
            <th>Minutes</th>
            <th></th>
            <th></th>
           </tr>
           <tr>
            <td>Environment Conversation</td>
            <td>22/02/2022</td>
            <td>1h</td>
            <td>30 min</td>
            <td><i class="bi bi-pencil-square text-warning"></i></td>
            <td><i class="bi bi-trash3"></i></td>
           </tr>
          </table>
         </div>
        </div>
       </div>
       <div class="col-lg-6 col-md-6 col-12">
        <div class="row">
         <div class="col-lg-6 col-md-6 col-12">
          <h3>Volunteering Goals</h3>
         </div>
        <div class="col-lg-6 col-md-6 col-12 text-end">
         <button type="button" class="btn btn-outline-warning border rounded-pill" data-bs-toggle="modal" data-bs-target="#VolunteeringGoal"><i class="bi bi-plus"></i>&nbsp; Add</button>

            <!-- Modal -->
            <div class="modal fade" id="VolunteeringGoal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Please input below Volunteering Goal</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form>
                    <div class="row py-3">
                    <label for="Mission" class="text-start">Mission</label>
                    <input type="text" asp-for="@Model.Notes" class="form-control" id="Mission" aria-describedby="emailHelp" placeholder="Enter Mission">
                    </div>
                    <div class="row py-3">
                    <label for="Action" class="text-start">Actions</label>
                    <input type="text" asp-for="@Model.Action" class="form-control" id="Action" aria-describedby="emailHelp" placeholder="Enter Actions">
                    </div>
                    <div class="row py-3">
                    <label for="datepicker2" class="text-start">Date Volunteered</label>
                      <input type="text" id="datepicker2" asp-for="DateVolunteered" placeholder="Select Date">
                      </div>
                          <div class="row py-3">
                        <div class="col-12 text-start">
                         <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" aria-describedby="emailHelp" placeholder="Enter your message"></textarea>
                        </div>
                        </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline-warning" >Submit</button>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="container p-3">
         <table class="w-100">
          <tr>
           <th>Mission</th>
           <th>Date</th>
           <th>Action</th>
           <th></th>
           <th></th>
          </tr>
          <tr>
           <td>Plantation Program</td>
           <td>22/02/2022</td>
           <td>0</td>
           <td><i class="bi bi-pencil-square text-warning"></i></td>
           <td><i class="bi bi-trash3"></i></td>
          </tr>
         </table>
        </div>
       </div>
      </div>
     </div>
    </div>
    <script>
    $(document).ready(function() {
    $('#datepicker1').datepicker({
        format: 'mm/dd/yyyy',
        autoclose: true,
        todayHighlight: true
    });
     $('#datepicker2').datepicker({
        format: 'mm/dd/yyyy',
        autoclose: true,
        todayHighlight: true
    });
});
</script>
  <!-- Include the JavaScript files -->
 
 <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

}
